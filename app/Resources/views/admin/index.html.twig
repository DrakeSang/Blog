{% extends 'base.html.twig' %}

{% block main %}

    <div class="container body-content">
        <div class="row">
            <div style="width: 100%;">
                <div>
                    <h3 style="text-align: center;">All Users</h3>
                </div>
                <table class="table table-bordered" id="myTable">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>FullName</th>
                        <th>Email</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.fullName }}</td>
                            <td>
                                <a href="{{ path('add_message', {'id': user.id}) }}">
                                    {{ user.email }}
                                </a>
                            </td>
                            <td>
                                <a href="{{ path('user_delete', {'id': user.id} ) }}" style="color:red">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row">
            <div style="width: 100%;">
                <div>
                    <h3 style="text-align: center;">All Articles</h3>
                </div>
                <table class="table table-bordered" id="myTable">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Author</th>
                        <th>Date</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for article in articles %}
                        <tr>
                            <td>{{ article.id }}</td>
                            <td>{{ article.title }}</td>
                            <td>{{ article.author.fullName }}</td>
                            <td>{{ article.dateAdded|date('F jS \\a\\t g:ia', 'Europe/Sofia') }}</td>
                            <td>
                                <a href="{{ path('article_delete', {'id': article.id} ) }}" style="color:red">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}