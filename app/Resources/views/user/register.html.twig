{% extends 'base.html.twig' %}

{% block main %}

    {% for msg in app.session.flashBag.get('info') %}
        <div class="alert alert-danger alert-dismissable msg">
            {#<a href="#" class="close" data-dismiss="alert" aria-label="close">Ã—</a>#}
            {{ msg }}
        </div>
    {% endfor %}

    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" action="{{ path('user_register') }}" method="post" enctype="multipart/form-data">
                <fieldset>
                    <legend>Register</legend>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="user_email">Email</label>
                        <div class="col-sm-4 ">
                            <input class="form-control" id="user_email" placeholder="Email" name="user[email]"
                                   type="text" value="{{ data['email'] }}">
                            <span class="error">{{ data['email_error'] }}</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="user_fullName">Full Name</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="user_fullName" placeholder="Full Name"
                                   name="user[fullName]" value="{{ data['fullName'] }}" >
                            <span class="error">{{ data['fullName_error'] }}</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="user_password_first">Password</label>
                        <div class="col-sm-4">
                            <input type="password" class="form-control" id="user_password_first"
                                   placeholder="Password" name="user[password][first]" value="{{ data['password'] }}" >
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="user_password_second">Confirm Password</label>
                        <div class="col-sm-4">
                            <input type="password" class="form-control" id="user_password_second"
                                   placeholder="Repeat Password" name="user[password][second]" value="{{ data['repeatedPassword'] }}">
                            <span class="error">{{ data['password_error'] }}</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="user_image">Image</label>
                        <div class="col-sm-4">
                            <input type="file" class="form-control" id="user_image" placeholder="Image"
                                   name="user[image]">
                            <span class="error">{{ data['image_error'] }}</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('blog_index') }}">Cancel</a>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>

                    {{  form_row(form._token) }}
                </fieldset>
            </form>
        </div>
    </div>
{% endblock %}
